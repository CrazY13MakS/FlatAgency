@using FlatAgency.Models;
@model List<Flat>
@{
    ViewData["Title"] = "Search";
}



<div id="best-deal">
		<div class="container">
			<div class="row">
				<div class="col-md-8 col-md-offset-2 text-center fh5co-heading animate-box" data-animate-effect="fadeIn">
					<h2>We are Offering the Best Real Flat Agency Deals</h2>
					<p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts. </p>
				</div>
			</div>
            <div class="row">

                <div class="col-md-2 search" >
					<form action="" method="get">
						<label for="Form-rooms">
							Rooms
						</label>
                        <select id="Form-rooms" name="rooms">
                            <option value="0">Not set</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
						<label for="Form-minprice">
							Min Price
						</label>
						<input type="number" min="0" name="minprice" id="Form-minprice">
						<label for="Form-maxprice">
							Max Price
						</label>
						<input type="number"  min="0" max="@ViewData["MaxPrice"]" value="@ViewData["MaxPrice"]" name="maxprice" id="Form-maxprice">

						<label for="Form-minsquere">
							Min Squere
						</label>
						<input type="number"  min="0" name="minsquere" id="Form-minsquere">
						<label for="Form-maxsquere">
							Max Squere
						</label>
						<input type="number"  min="0" name="maxsquere" max="@ViewData["MaxSquare"]" value="@ViewData["MaxSquare"]" id="Form-maxsquere">

						<button type="submit">Search</button>
					</form>
				</div>

            
                <div class="col-md-10">
                        @foreach(var item in @Model)
                    {
                        @*<span><a href="GirlAlbum?id=@item.TagID">@item.Name</a></span>*@
                        <div class="col-md-4 item-block animate-box" data-animate-effect="fadeIn">

                            <div class="fh5co-property">
                                <figure>
                                    <img src="images/slide_6.jpg" alt="" class="img-responsive">
                                    
                                </figure>
                                <div class="fh5co-property-innter">
                                    <h3><a href="#">@item.District , @item.Address </a></h3>
                                    <div class="price-status">
                                    <span class="price">@item.Price</span>
                            </div>
                            <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Neque dicta magni amet atque doloremque velit unde adipisci omnis hic quaerat.</p>
                            </div>
                            <p class="fh5co-property-specification">
                                <span><strong>@item.Square</strong> Sq Ft</span>  <span><strong>@item.Floor</strong> Floor</span>  <span><strong>@item.Rooms</strong> Rooms</span>  
                            </p>
                            </div>
                        </div>
                    }
				
              </div>

			</div>
			<div class="row">
				<div class="col-md-12 text-center animate-box" data-animate-effect="fadeIn">
					<nav>
					  <ul class="pagination">
					    <li class="disabled">
					      <a href="#" aria-label="Previous">
					        <span aria-hidden="true">&laquo;</span>
					      </a>
					    </li>
					    <li class="active"><a href="#">1</a></li>
					    <li><a href="#">2</a></li>
					    <li><a href="#">3</a></li>
					    <li><a href="#">4</a></li>
					    <li><a href="#">5</a></li>
					    <li>
					      <a href="#" aria-label="Next">
					        <span aria-hidden="true">&raquo;</span>
					      </a>
					    </li>
					  </ul>
					</nav>
				</div>
			</div>
		</div>
	</div>
